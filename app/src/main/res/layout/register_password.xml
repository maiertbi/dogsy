<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context="com.dogsy.presentation.start.RegisterPassword">

    <TextView
        android:id="@+id/t1_regPw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="@string/please_enter_a_password"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:textSize="45sp"
        android:layout_marginTop="120dp"/>

    <TextView
        android:id="@+id/t2_regPw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1_regPw"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/password_condition"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv1_userPw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/t2_regPw"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp">


        <EditText
            android:id="@+id/et_reguserpassword1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:hint="@string/enter_password"
            android:inputType="textPassword"
            android:autofillHints="password"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/poppins_regular"
            android:background="@null"
            android:maxLines="1"
            android:singleLine="true"/>


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv2_userPw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/mcv1_userPw"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp">


        <EditText
            android:id="@+id/et_reguserpassword2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:hint="@string/confirm_password"
            android:autofillHints="password"
            android:inputType="textPassword"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/poppins_regular"
            android:background="@null"
            android:maxLines="1"
            android:singleLine="true"/>


    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/tv_wrongPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mcv2_userPw"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/red"
        android:textSize="20sp"/>


    <ImageButton
        android:id="@+id/ib_reguserpassword"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/next"
        android:contentDescription="@string/signinbutton">

    </ImageButton>


</RelativeLayout>