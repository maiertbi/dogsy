<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor">

    <TextView
        android:id="@+id/t1_regPw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="Please enter a password"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:textSize="45sp"
        android:layout_marginTop="120dp"/>

    <TextView
        android:id="@+id/t2_regPw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_bold"
        android:text="Your password needs to contain an upper case letter, number and at least one special character"
        android:layout_below="@+id/t1_regPw"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/t2_regPw"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp">


        <EditText
            android:id="@+id/et_pw1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:hint="Enter password"
            android:inputType="textPassword"
            android:autofillHints="password"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/poppins_regular"
            android:background="@null"
            android:maxLines="1"
            android:singleLine="true"/>


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/mcv1"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp">


        <EditText
            android:id="@+id/et_pw2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:hint="Confirm password"
            android:autofillHints="password"
            android:inputType="textPassword"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/poppins_regular"
            android:background="@null"
            android:maxLines="1"
            android:singleLine="true"/>


    </com.google.android.material.card.MaterialCardView>


    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        android:background="null"
        android:src="@drawable/next"
        android:scaleType="fitCenter">

    </ImageButton>


</RelativeLayout>