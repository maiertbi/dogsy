<resources>
    <!-- Base application theme. -->
    <style name="Theme.Dogsy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColorDarker</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. NOT NEEDED BUT DO NOT DELETE -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Font family -->
        <item name="fontFamily">@font/poppins_family</item>
    </style>
    <style name="Theme.Dogsy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Dogsy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Dogsy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>